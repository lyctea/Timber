<style>
  #shopify-section-{{ section.id }} {
    {%- if section.settings.isPd -%}
      padding-bottom: {{ section.settings.pc_margin_bottom }};
    {%- else -%}
    margin-bottom: {{ section.settings.pc_margin_bottom }};
    {% endif %}
    
  }
  @media (max-width: 1024px) {
    #shopify-section-{{ section.id }} {
      
      {%- if section.settings.isPd -%}
        padding-bottom: {{ section.settings.mobile_margin_bottom }};
      {%- else -%}
      margin-bottom: {{ section.settings.mobile_margin_bottom }};
      {% endif %}
      }
  } 
</style>